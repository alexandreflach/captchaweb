@{
    ViewBag.Title = "Captcha";
}

<div class="row">
    <div class="col-md-4">

        <div id="captcha-id-enabled" data-id-div="captchaLogin"></div>

        <div id="captchaLogin" class="captcha" data-required="false">
            @Html.Partial("~/Views/Home/CaptchaGoogle.cshtml")
        </div>

    </div>

    <!-- Trigger the modal with a button -->
    <button id="esqueciMinhaSenha" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal"
            onclick="">Esqueci minha senha</button>

    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Enviar Senhar</h4>
                </div>
                <div class="modal-body">
                    <label>Email</label>
                    <input type="text" required />

                    <div id="captchaRetrieved" class="captcha">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                    </div>
                </div>

        </div>
    </div>
</div>